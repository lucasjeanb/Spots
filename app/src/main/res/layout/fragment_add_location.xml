<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.myspots.AddLocationFragment">

    <EditText
        android:id="@+id/locationName_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:hint="Location Name"
        android:textAlignment="center"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/currentLocation_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationName_edittext"
        android:layout_marginTop="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:text="Set to my current Location"
        android:textAlignment="center"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectLocation_button"
    android:layout_width="250dp"
    android:layout_height="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/currentLocation_button"
    android:layout_marginTop="20dp"
    android:layout_marginStart="26dp"
    android:layout_marginEnd="26dp"
    android:text="Select on Map"
    android:textAlignment="center"
    />




</androidx.constraintlayout.widget.ConstraintLayout>