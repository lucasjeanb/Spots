<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    android:clickable="true"
    android:id="@+id/fragmentadd_background_click"
    android:background="#BF585858"
    tools:context=".ui.myspots.AddLocationFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#ffffff"
        >

    <EditText
        android:id="@+id/locationName_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:hint="Location Name"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/locationSelect_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationName_edittext"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/currentLocation_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationSelect_textview"
        android:layout_marginTop="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginEnd="26dp"
        android:textColor="@android:color/white"
        android:background="?colorPrimary"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"

        android:text="Set to my current Location"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/selectLocation_button"
        android:layout_width="250dp"
        android:layout_height="50dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/currentLocation_button"
        android:textColor="@android:color/white"
        android:background="?colorPrimary"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"

        android:layout_margin="26dp"
    android:text="Select on Map"
    android:textAlignment="center"
    />

    <Button
        android:id="@+id/confirmLocation_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectLocation_button"
        android:textColor="@android:color/white"
        android:background="?colorPrimary"
        android:textAllCaps="false"
        android:layout_gravity="center_horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="26dp"
        android:text="Confirm"
        android:textAlignment="center"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>